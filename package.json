{
  "name": "pwa-starter",
  "version": "0.0.0",
  "description": "Template for Frontend Development with Next.js + TypeScript",
  "license": "MIT",
  "scripts": {
    "prepare": "yarn msw init public/ --save",
    "dev": "env-cmd -f config/envs/.env.development next dev",
    "build:stag": "env-cmd -f config/envs/.env.staging next build",
    "build:prod": "env-cmd -f config/envs/.env.production next build",
    "start:stag": "env-cmd -f config/envs/.env.staging next start",
    "start:prod": "env-cmd -f config/envs/.env.production next start",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "fmt": "prettier --write '(src|tests)/**/*.{ts,tsx,json}'",
    "lint:check": "eslint . --ext .ts,.tsx",
    "fmt:check": "prettier --check '(src|tests)/**/*.{ts,tsx,json}'",
    "test": "jest -i",
    "test:w": "jest -i --watch",
    "test:c": "jest -i --coverage",
    "t": "yarn test"
  },
  "dependencies": {
    "env-cmd": "^10.1.0",
    "next": "^12.1.4",
    "next-pwa": "^5.4.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-query": "^3.34.5",
    "workbox-precaching": "^6.4.2",
    "workbox-routing": "^6.4.2"
  },
  "devDependencies": {
    "@swc/core": "^1.2.119",
    "@swc/jest": "^0.2.12",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.4",
    "@types/react": "^17.0.31",
    "@types/workbox-precaching": "^4.3.1",
    "@types/workbox-routing": "^4.3.1",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.9.0",
    "autoprefixer": "^10.4.0",
    "eslint": "<8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^27.3.1",
    "msw": "^0.36.3",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "@swc/jest",
        {
          "sourceMaps": true
        }
      ]
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testMatch": [
      "<rootDir>/tests/(unit|integration)/**/*.test.ts(x)?"
    ],
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "@testing-library/react/dont-cleanup-after-each",
      "@testing-library/jest-dom/extend-expect",
      "./config/mocks/setup-tests.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@config/(.*)$": "<rootDir>/config/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!src/**/index.ts"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "react-hooks",
      "jsx-a11y"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:jsx-a11y/recommended",
      "prettier"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "eslintIgnore": [
    "node_modules",
    ".next",
    "coverage"
  ],
  "postcss": {
    "plugins": [
      "tailwindcss",
      "autoprefixer"
    ]
  },
  "msw": {
    "workerDirectory": "public"
  }
}
