{
  "name": "pwa-starter",
  "version": "1.0.0",
  "description": "Template for Frontend Development with Next.js + TypeScript",
  "repository": "git@github.com:inodaf/pwa-starter.git",
  "author": "Isac Fadoni",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "env-cmd -f config/envs/.env.development next dev",
    "build:stag": "env-cmd -f config/envs/.env.staging next build",
    "build:prod": "env-cmd -f config/envs/.env.production next build",
    "start:stag": "env-cmd -f config/envs/.env.staging next start",
    "start:prod": "env-cmd -f config/envs/.env.production next start",
    "lint": "next lint",
    "test": "clear && jest -i",
    "test:w": "clear && jest -i --watch",
    "t": "yarn test"
  },
  "dependencies": {
    "env-cmd": "^10.1.0",
    "next": "^12.0.3",
    "next-pwa": "^5.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "workbox-precaching": "^6.3.0",
    "workbox-routing": "^6.3.0"
  },
  "devDependencies": {
    "@swc/core": "^1.2.119",
    "@swc/jest": "^0.2.12",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.4",
    "@types/react": "^17.0.31",
    "@types/workbox-precaching": "^4.3.1",
    "@types/workbox-routing": "^4.3.1",
    "eslint": "<8.0.0",
    "eslint-config-next": "12.0.3",
    "jest": "^27.3.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "@swc/jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testMatch": [
      "<rootDir>/tests/unit/**/*.test.ts(x)?"
    ],
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "@testing-library/react/dont-cleanup-after-each",
      "@testing-library/jest-dom/extend-expect"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@config/(.*)$": "<rootDir>/config/$1"
    }
  },
  "eslintConfig": {
    "extends": "next/core-web-vitals"
  }
}
