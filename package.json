{
  "name": "pwa-kit",
  "version": "0.0.0",
  "description": "PWA Kit with Next.js + TypeScript",
  "license": "MIT",
  "scripts": {
    "dev": "APP_ENV=dev NEXT_PUBLIC_APP_ENV=dev next dev",
    "dev:secure": "concurrently \"pnpm dev --port=3001\" \"caddy run\" ",
    "build:stag": "APP_ENV=staging NEXT_PUBLIC_APP_ENV=staging next build",
    "build:prod": "APP_ENV=production NEXT_PUBLIC_APP_ENV=production next build",
    "start:stag": "APP_ENV=staging NEXT_PUBLIC_APP_ENV=staging next start",
    "start:prod": "APP_ENV=production NEXT_PUBLIC_APP_ENV=production next start",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "fmt": "prettier --write '(src|tests|.types)/**/*.{ts,tsx,json}'",
    "lint:check": "eslint . --ext .ts,.tsx",
    "fmt:check": "prettier --check '(src|tests|.types)/**/*.{ts,tsx,json}'",
    "test": "APP_ENV=dev NEXT_PUBLIC_APP_ENV=dev jest -i",
    "test:w": "pnpm test -- --watch",
    "test:c": "pnpm test -- --coverage",
    "t": "pnpm test",
    "test:e2e": "E2E_BASE_URL=http://localhost:3000 pnpm playwright test -x -c tests/config/e2e/setup.ts",
    "cleanup": "pnpm rimraf .next coverage",
    "cleanup:hard": "pnpm cleanup -- node_modules",
    "ci": "concurrently \"pnpm t\" \"pnpm fmt:check\" \"pnpm lint:check\" "
  },
  "dependencies": {
    "@tanstack/react-query": "^4.24.4",
    "dotenv": "16.0.3",
    "lodash": "4.17.21",
    "next": "^13.1.6",
    "next-pwa": "^5.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "workbox-precaching": "^6.5.4",
    "workbox-routing": "^6.5.4"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@playwright/test": "^1.30.0",
    "@swc/core": "^1.3.31",
    "@swc/jest": "^0.2.24",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.4.0",
    "@types/lodash.merge": "4.6.7",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/workbox-precaching": "^5.0.0",
    "@types/workbox-routing": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^9.1.2",
    "concurrently": "7.6.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-jest-dom": "4.0.3",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "msw": "^1.0.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.2",
    "tailwindcss": "^3.2.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "@swc/jest",
        {
          "sourceMaps": true
        }
      ]
    },
    "reporters": [
      "default",
      "github-actions"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testMatch": [
      "<rootDir>/tests/(unit|integration)/**/*.test.ts(x)?",
      "<rootDir>/src/**/*.test.ts(x)?"
    ],
    "testEnvironment": "jsdom",
    "setupFiles": [
      "dotenv/config"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/react/dont-cleanup-after-each",
      "@testing-library/jest-dom/extend-expect",
      "./tests/config/mocks/setup-tests.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/modules/**/*.{ts,tsx}",
      "src/utilities/**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!src/**/index.{ts,tsx}"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "react-hooks",
      "jsx-a11y",
      "jest-dom"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:jest-dom/recommended",
      "prettier"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "eslintIgnore": [
    "node_modules",
    ".next",
    "coverage",
    ".vscode"
  ],
  "postcss": {
    "plugins": [
      "tailwindcss",
      "autoprefixer"
    ]
  },
  "msw": {
    "workerDirectory": "public"
  },
  "volta": {
    "node": "16.15.1"
  }
}
