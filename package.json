{
  "name": "pwa-kit",
  "version": "0.0.0",
  "description": "PWA Kit with Next.js + TypeScript",
  "license": "MIT",
  "scripts": {
    "dev": "APP_ENV=dev NEXT_PUBLIC_APP_ENV=dev next dev",
    "build:stag": "APP_ENV=staging NEXT_PUBLIC_APP_ENV=staging next build",
    "build:prod": "APP_ENV=production NEXT_PUBLIC_APP_ENV=production next build",
    "start:stag": "APP_ENV=staging NEXT_PUBLIC_APP_ENV=staging next start",
    "start:prod": "APP_ENV=production NEXT_PUBLIC_APP_ENV=production next start",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "fmt": "prettier --write '(src|tests|.types)/**/*.{ts,tsx,json}'",
    "lint:check": "eslint . --ext .ts,.tsx",
    "fmt:check": "prettier --check '(src|tests|.types)/**/*.{ts,tsx,json}'",
    "test": "APP_ENV=dev NEXT_PUBLIC_APP_ENV=dev jest -i",
    "test:w": "pnpm test -- --watch",
    "test:c": "pnpm test -- --coverage",
    "t": "pnpm test",
    "test:e2e": "E2E_BASE_URL=http://localhost:3000 pnpm playwright test -x -c tests/config/e2e/setup.ts",
    "cleanup": "pnpm rimraf .next coverage",
    "cleanup:hard": "pnpm cleanup -- node_modules"
  },
  "dependencies": {
    "@tanstack/react-query": "^4.0.10",
    "dotenv": "16.0.3",
    "lodash.merge": "4.6.2",
    "next": "^12.2.3",
    "next-pwa": "^5.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "workbox-precaching": "^6.5.3",
    "workbox-routing": "^6.5.3"
  },
  "devDependencies": {
    "@babel/core": "^7.19.6",
    "@playwright/test": "^1.27.1",
    "@swc/core": "^1.3.11",
    "@swc/jest": "^0.2.23",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/lodash.merge": "4.6.7",
    "@types/jest": "^29.2.0",
    "@types/node": "^18.11.8",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "@types/workbox-precaching": "^4.3.1",
    "@types/workbox-routing": "^4.3.1",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^9.0.1",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "msw": "^0.47.4",
    "postcss": "^8.4.18",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.2.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "@swc/jest",
        {
          "sourceMaps": true
        }
      ]
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testMatch": [
      "<rootDir>/tests/(unit|integration)/**/*.test.ts(x)?"
    ],
    "testEnvironment": "jsdom",
    "setupFiles": [
      "dotenv/config"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/react/dont-cleanup-after-each",
      "@testing-library/jest-dom/extend-expect",
      "./tests/config/mocks/setup-tests.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!src/**/index.ts"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "react-hooks",
      "jsx-a11y"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:jsx-a11y/recommended",
      "prettier"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "eslintIgnore": [
    "node_modules",
    ".next",
    "coverage",
    ".vscode"
  ],
  "postcss": {
    "plugins": [
      "tailwindcss",
      "autoprefixer"
    ]
  },
  "msw": {
    "workerDirectory": "public"
  },
  "volta": {
    "node": "16.15.1"
  }
}
